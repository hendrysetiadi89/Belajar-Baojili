<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeight"
    android:paddingLeft="@dimen/padding_16"
    android:paddingRight="@dimen/padding_16">
    <ImageView
        android:id="@+id/iv_item_photo"
        android:layout_width="@dimen/medium_large_icon_size"
        android:layout_height="@dimen/medium_large_icon_size"
        tools:src="@drawable/logo_baojili"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/padding_16"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_code_and_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16"
            tools:text="001 - L"/>
        <TextView
            android:id="@+id/tv_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:textColor="@color/gray_solid_700"
            tools:text="Desckripsi item "/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_16"
        tools:text="10000"
        android:layout_gravity="center_vertical|end"/>
</LinearLayout>